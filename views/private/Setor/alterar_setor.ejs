<%- include('../../partials/head.ejs') %>

<body>

    <div class="wrapper">

        <div class="container">
            <div tabindex="-1" id="alertaerro" role="alert" style="display: none;"></div>
            <form action="/admin/update_setor" class="form-control" method="post" onsubmit="updateSetor(); return false;">
                
                <div class="card">
                
                    <div class="card-header">
                        Alterar setor da empresa
                    </div>
    
                    <div class="card-body">
                        <input type="text" name="setor" class="form-control form-control-lg inputs" value="<%=setor.setor%>"><br>
                        <div class="msg_erro" style="display: none;">*Campo Obrigatório</div>
                        <label for="setor">Ex: Desenvolvimento, Importação, Suporte</label>
                        <br>
                        <input type="text" name="sigla" class="form-control form-control-lg inputs" value="<%=setor.sigla%>"><br>
                        <div class="msg_erro" style="display: none;">*Campo Obrigatório</div>
                        <label for="sigla">Ex: DEV, IMP, SUP</label>
                        
                    </div>
    
                    <div class="card-footer">
                        <div onclick="updateSetor()" class="btn btn-success">Salvar</div>
                        <a href="/admin/listar_setor"><div class="btn btn-secondary">Voltar</div></a>
                    </div>
                    
                </div>
                <input type="hidden" name="id" style="display: none;" value="<%=setor.id%>">
            </form>
            
        </div>

    </div>

</body>

<%- include('../../partials/footer.ejs') %>