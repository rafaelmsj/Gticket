<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gticket</title>
    <link rel="shortcut icon" href="imgs/sistema/favicon_io/favicon-32x32.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="/css/stylePublic.css">
</head>

<%
    function capitalizeFirstLetterOfWords(str) {
        return str
            .split(' ') // Divide a string em palavras
            .map(word => word.charAt(0).toUpperCase() + word.slice(1)) // Converte a primeira letra em maiúscula
            .join(' '); // Junta as palavras de volta em uma string
    }
%>
<header>

  <nav class="navbar navbar-expand-lg navbar-custom bg-dark">
    <div class="container-fluid">
      
      <!-- Logo (esquerda) -->
      <a class="navbar-brand" href="/">
        <img src="/imgs/sistema/logos/LOGO BRANCA.png" width="150" alt="Logo" class="d-inline-block align-text-top">
      </a>

      <!-- Itens da Navbar -->
      <div class="collapse d-md-flex mb-2 mt-3">
  
        <!-- Links de navegação centralizados -->
        <ul class="navbar-nav mx-auto text-center">
          <li class="nav-item">
            <a class="nav-link active text-white" aria-current="page" href="/">Início</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/tickets">Tickets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/entidades">Entidades</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/usuarios">Usuários</a>
          </li>
        </ul>
      </div>
        <!-- Login / Saudação do usuário -->
        <% if(nome == '' || nome == undefined){ %>
          <a href="/login" class="btn btn-outline-light ms-lg-3 mt-3 mt-lg-0">
            <i class="fas fa-user me-2"></i> Login
          </a>
        <% } else { %>
          <div class="d-flex align-items-center mt-3 mt-lg-0">
            <i class="fas fa-user-circle fa-lg text-white me-2 mr-2" style="font-size: 2rem;"></i>
            <div>
              <strong class="text-white" style="font-size: 16px;">Olá, <%= capitalizeFirstLetterOfWords(nome.split(' ')[0]) %></strong><br>
              <a href="/admin" class="text-muted" style="font-size: 14px;">Acessar Sistema</a>
            </div>
          </div>
        <% } %>
  
     

    </div>

    <div class="d-flex d-md-none mt-2 justify-content-center">
      <div>
        <!-- Botão de toggle (aparece apenas em telas pequenas) -->
        <div class="d-flex justify-content-center d-lg-none mb-2">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span><i class="fas fa-bars text-white"></i></span>
          </button>
        </div>
      </div>
      <div class="justify-content-center">
        <!-- Itens da Navbar (Links de navegação) -->
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav text-center">
            <li class="nav-item">
              <a class="nav-link active text-white" aria-current="page" href="/">Início</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/tickets">Tickets</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/entidades">Entidades</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/usuarios">Usuários</a>
            </li>
          </ul>
        </div>
      </div>
   </div>
  </nav>

</header>

<!-- Adicionar o link do JS do Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
