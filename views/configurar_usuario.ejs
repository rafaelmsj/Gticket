<%- include('partials/head') %>

<body>
    
    <div class="wrapper">

        <div class="container">
            <div tabindex="-1" id="alertaerro" role="alert" style="display: none;">
                
            </div>
            <form action="/alterar_password" class="form-control" method="post" onsubmit="atualizasenha(); return false;">
                
                <div class="card">
                
                    <div class="card-header">
                        Alterar Senha
                    </div>
                    
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="senha-antiga" class="form-label"><strong>Senha Antiga:</strong></label>
                            <div class="input-group">
                                <input type="password" name="senhaAntiga" id="senhaAntiga" class="form-control form-control-lg inputs camposenha" placeholder="Digite sua senha antiga" required>
                                <div class="input-group-append">
                                    <span id="toggleSenhaAntiga" class="input-group-text visualizaSenha" onclick="visualizaSenha()">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <br>
                            <div class="msg_erro" style="display: none;">*Campo Obrigatório</div>

                        </div>
                        <hr>
                        <div class="mb-4">
                            <label for="nova-senha" class="form-label"><strong>Nova Senha:</strong></label>
                            <div class="input-group">
                                <input name="novaSenha" id="novaSenha" type="password" class="form-control form-control-lg inputs camposenha" placeholder="Digite a nova senha" required>
                                <div class="input-group-append">
                                    <span id="toggleSenhaAntiga" class="input-group-text visualizaSenha" onclick="visualizaSenha()">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <br>
                            <div class="msg_erro" style="display: none;">*Campo Obrigatório</div>
                        </div>
                
                        <div class="mb-4">
                            <label for="confirmar-nova-senha" class="form-label"><strong>Confirmar Nova Senha:</strong></label>
                            <div class="input-group">
                                <input name="confirmarNovaSenha" type="password" id="confirmarNovaSenha" class="form-control form-control-lg inputs camposenha" placeholder="Confirme a nova senha" required>
                                <div class="input-group-append">
                                    <span id="toggleSenhaAntiga" class="input-group-text visualizaSenha" onclick="visualizaSenha()">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <br>
                            <div class="msg_erro" style="display: none;">*Campo Obrigatório</div>
                        </div></div>
                        
                    </div>
    
                    <div class="card-footer">
                        <div onclick="atualizasenha()" class="btn btn-success">Salvar</div>
                        <a href="/admin"><div class="btn btn-secondary">Voltar</div></a>
                    </div>
                    
                </div>
                <input type="hidden" name="id" style="display: none;" value="<%=usuario.id%>">
            </form>
            
        </div>

    </div>

</body>

<%- include('partials/footer') %>