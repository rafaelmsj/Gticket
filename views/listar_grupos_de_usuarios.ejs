<%- include('partials/head.ejs') %>

<body>

  <div class="wrapper">

    <div class="container">

      <div class="card mt-2">
          
          <div class="card-header">
              Grupos de Usúario
          </div>
          
          <div class="card-header">
                
            <div class="d-flex flex-column flex-sm-row">
                <div class="d-flex flex-column flex-sm-row mb-3">
                    <!-- Botões em uma linha em telas pequenas -->
                    <div class="">
                        <% if(infoGrupo.inserir === 1){%>
                            <a href="/inserir_grupos_de_usuarios"><button class="btn btn-primary rounded-pill botao_inserir" id="botao_inserir"><i class="fas fa-plus-circle"></i> Inserir</button></a>
                        <%}%>
                        <a href="/admin" class="mt-3"><div class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Voltar</div></a>
            
                        <!-- Botão filtro com ícone -->
                        <div onclick="carregarFiltros()" class="btn btn-outline-secondary rounded-pill mr-4">
                            <i class="fas fa-filter"></i> <!-- Ícone de filtro adicionado -->
                        </div>
                    </div>
                </div>
            
                <!-- Formulário de busca -->
                <div id="2" class="d-flex flex-column flex-sm-row">
                    <form id="formulariofiltro" action="/listar_grupos_de_usuarios" method="GET" class="w-100">
                        <div class="input-group mb-3">
                            <input type="text" name="search" class="form-control rounded-pill" placeholder="Pesquisar..." aria-label="Pesquisar">
                            <div class="input-group-append">
                                <button type="submit" class="btn custom-btn">
                                    <i class="fas fa-search custom-icon"></i> <!-- Ícone de lupa maior -->
                                </button>
                            </div>
                        </div>
                    
                </div>
            </div>
            
                <!-- Filtros (Instalação, Ordenar por) -->
                    <div class="justify-content-center mt-4" id="DivFiltros" style="display: none;">

                        <!-- Ordenar por -->
                        <div class="ml-3">
                            <span>Ordenar por</span>
                            <div class="form-check">
                                <div onclick="filtro()"><input class="form-check-input custom-radio checkFiltros" checked type="radio" name="ordenar" id="ordenar_a_z" value="a_z" <%if(ordenar === 'a_z'){%>checked<%}%>></div>
                                <label class="form-check-label" for="ordenar_a_z">A-Z</label>
                            </div>
                            <div class="form-check">
                                <div onclick="filtro()"><input class="form-check-input custom-radio checkFiltros" type="radio" name="ordenar" id="ordenar_z_a" value="z_a" <%if(ordenar === 'z_a'){%>checked<%}%>></div>
                                <label class="form-check-label" for="ordenar_z_a">Z-A</label>
                            </div>
                            <div class="form-check">
                                <div onclick="filtro()"><input class="form-check-input custom-radio checkFiltros" type="radio" name="ordenar" id="ordenar_mais_recente" value="mais_recente" <%if(ordenar === 'mais_recente'){%>checked<%}%>></div>
                                <label class="form-check-label" for="ordenar_mais_recente">Mais recente</label>
                            </div>
                            <div class="form-check">
                                <div onclick="filtro()"><input class="form-check-input custom-radio checkFiltros" type="radio" name="ordenar" id="ordenar_menos_recente" value="menos_recente" <%if(ordenar === 'menos_recente'){%>checked<%}%>></div>
                                <label class="form-check-label" for="ordenar_menos_recente">Menos recente</label>
                            </div>
                        </div>
                    </div>
                </form>
            
        </div>

          <div class="card-body">

              <div class="container">
                <% grupos.forEach((grupo) => { %>
                  <div class="border-bottom py-2">
                    <div class="row">
                      <div class="col-12"><strong>Grupo:</strong> <%= grupo.grupo %></div>
                    </div>
                    
                    <div class="row align-items-center">
                      <div class="col-12 col-md"><strong>Inserir:</strong> <%= grupo.inserir === 1 ? 'Sim' : 'Não' %></div>
                      <div class="col-12 col-md"><strong>Alterar:</strong> <%= grupo.alterar === 1 ? 'Sim' : 'Não' %></div>
                      <div class="col-12 col-md"><strong>Excluir:</strong> <%= grupo.deletar === 1 ? 'Sim' : 'Não' %></div>
                      
                      <div class="col-auto ms-auto">
                        <% if(infoGrupo.deletar === 1 || infoGrupo.alterar === 1){ %>
                          <button class="btn btn-info btn-sm rounded-pill" onclick="carregaBtns('<%=grupo.id%>')" id="botaomais">
                            <i class="fas fa-plus"></i>
                          </button>
                        <% } %>
                      </div>
                    </div>

                    <div style="display: none;" id="botoes-<%=grupo.id%>" class="mt-2">
                      <form action="/deletar_grupo" method="post" class="flex">
                        <% if(infoGrupo.alterar === 1){%>
                          <a href="/alterar_grupo_de_usuario/<%=grupo.id%>"><div style="display: inline-block;" class="btn btn-warning btn-sm botao_alterar">
                            <i class="fas fa-edit"></i> Alterar
                          </div></a>
                        <% } else { %>
                          <div style="display: none;" class="btn btn-warning btn-sm botao_alterar">Alterar</div>
                        <% } %>

                        <% if(infoGrupo.deletar === 1){%>
                          <div style="display: inline-block;" class="btn btn-danger btn-sm botao_deletar" onclick="deletar('<%=grupo.id%>')">
                            <i class="fas fa-trash-alt"></i> Deletar
                          </div>
                        <% } else { %>
                          <div style="display: none;" class="btn btn-danger btn-sm botao_deletar">Deletar</div>
                        <% } %>
                        
                        <input style="display: none;" type="hidden" name="id" value="<%=grupo.id%>">
                      </form>
                    </div>
              </div>
              <% }); %>
            </div>

                

          </div>

          <% if(totalPages > 0){%>
            <div class="card-footer">

                <div class="d-flex justify-content-center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/listar_grupos_de_usuarios?page=<%= currentPage - 1 %>">Anterior</a>
                            </li>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="/listar_grupos_de_usuarios?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                    
                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="/listar_grupos_de_usuarios?page=<%= currentPage + 1 %>">Próximo</a>
                            </li>
                        </ul>
                    </nav>
                    
                </div>
            </div>
        <%}%>

      </div>

  </div>    

  </div>
    
</body>


<%- include('partials/footer.ejs') %>